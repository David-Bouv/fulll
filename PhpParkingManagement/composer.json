{
    "name": "david/php-parking-management",
    "description": "I have a vehicle fleet and I want to manage where every vehicle is parked.",
    "authors": [
        {
            "name": "David-Bouv",
            "email": "d.bouvencourt@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Domain\\": "src/Domain/",
            "Infra\\": "src/Infra/",
            "Console\\": "src/Console/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:all": "phpunit"
    },
    "require": {
        "php": "^8.2",
        "symfony/console": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "behat/behat": "^3.18"
    }
}
